@model UdemyCource.ViewModels.RoleModel
@{
    ViewData["Title"] = "AddRole";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row justify-content-md-center" style="margin-top:130px;">

    <div class="col-md-5">

        <div class="card">
            <h5 class="card-header bg-dark text-white">Add Role</h5>
            <div class="card-body">

                <form class="px-4 py-3" asp-action="AddRole" asp-controller="ManageUsers" method="post">

                    <div asp-validation-summary="All" class="text-danger"></div>
                    <input type="hidden" asp-for="Id" />
                    <div class="form-group">
                        <label for="">Role Name</label>
                        <input type="text" class="form-control" asp-for="RoleName" autocomplete="off">
                    </div>
                    <div class="dropdown-divider"></div>
                    <button type="submit" class="btn btn-primary">Create Role</button>
                </form>
            </div>
        </div>
    </div>


</div>

