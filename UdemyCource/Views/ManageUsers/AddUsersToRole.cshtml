@model UdemyCource.ViewModels.AddUsersToRoleRequest
@{
    ViewData["Title"] = "AddUsersToRole";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="row justify-content-md-center" style="margin-top:130px;">

    <div class="col-md-5">

        <div class="card">
            <h5 class="card-header bg-dark text-white">Add Users Role</h5>
            <div class="card-body">

                <form class="px-4 py-3" asp-action="AddUsersToRole" asp-controller="ManageUsers" method="post">

                    <div asp-validation-summary="All" class="text-danger"></div>

                    <div class="form-group">
                        <label for="">Select Role</label>
                        <select asp-items="@ViewBag.RoleList" asp-for="RoleId" class="form-control">
                            <option selected disabled>--------</option>
                        </select>
                    </div>


                    @if (Model.Users.Any())
                    {
                        for (int i = 0; i < Model.Users.Count; i++)
                        {
                            <input type="hidden" asp-for="@Model.Users[i].Id" />
                            <div class="form-group">
                                <input type="checkbox" asp-for="@Model.Users[i].IsSelectedToAddToRole"
                                       onchange="this.value=this.checked" class="form-check-input" />
                                <label>@Model.Users[i].Name</label>
                            </div>
                        }
                    }
                    <div class="dropdown-divider"></div>
                    <button type="submit" class="btn btn-primary">Assign Users To Role</button>
                </form>




            </div>
        </div>
    </div>


</div>
